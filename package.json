{
  "name": "game-portal-project",
  "version": "1.0.0",
  "description": "Game portal",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Aivars Liepa",
  "license": "MIT",
  "engines": {
    "node": "9.3.0"
  },
  "scripts": {
    "start": "npm run serve",
    "client": "npm run start --prefix client",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon dist/src/server.js",
    "watch-node-ts":
      "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch":
      "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Client\" -c \"cyan.bold,green.bold,yellow.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run client\"",
    "test": "jest --forceExit --coverage --verbose",
    "heroku-postbuild":
      "NPM_CONFIG_PRODUCTION=false npm run build && npm install --prefix client && npm run build --prefix client",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test-watch": "jest --verbose --watchAll"
  },
  "dependencies": {
    "@types/express": "^4.11.0",
    "@types/jest": "^22.0.1",
    "@types/socket.io": "^1.4.31",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.4",
    "express": "^4.16.2",
    "socket.io": "^2.0.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "jest": "^22.1.4",
    "nodemon": "^1.14.11",
    "socket.io-client": "^2.0.4",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.1"
  }
}
